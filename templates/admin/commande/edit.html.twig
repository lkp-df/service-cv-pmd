{% extends "admin/base.html.twig" %}
{% import "macros/link.html.twig" as link %}
{% import "macros/breadcrumb.html.twig" as breadcrumb %}

{% block breadcrumb %}
    {{ breadcrumb.breadcrumb('Edit Commande'|trans,[
        {
            name:'Listes des commandes',path:path('admin_commande_index')
        }
    ]) }}
{% endblock %}
{% block title %}
{{'Edit Commande'|trans}}
{% endblock %}


{% block body %}
<div class="card card-outline card-success">
    <div class="card-header">
        <div class="card-title">{{'Edit Commande'|trans}}</div>
    </div>
    <div class="card-body">
        {{ include('admin/commande/_form.html.twig', {'button_label': 'Update'}) }}
        {% if is_granted('ROLE_ADMIN') %}
        <hr>
        {{ include('admin/commande/_delete_form.html.twig') }}
        {% endif %}
        <hr>
        {{ link.back(path('admin_commande_index')) }}
    </div>
</div>
{% endblock %}
