{% extends "admin/base.html.twig" %}
{% block title %}
    Commande
{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <div class="card-title">
            Commande
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ commande.id }}</td>
                </tr>
                <tr>
                    <th>Number</th>
                    <td>{{ commande.number }}</td>
                </tr>
                <tr>
                    <th>Note</th>
                    <td>{{ commande.note }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ commande.state }}</td>
                </tr>
                <tr>
                    <th>Total</th>
                    <td>{{ commande.total }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>PaymentDue</th>
                    <td>{{ commande.paymentDue ? commande.paymentDue|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Items_total</th>
                    <td>{{ commande.itemsTotal }}</td>
                </tr>
                <tr>
                    <th>Adjustments_total</th>
                    <td>{{ commande.adjustmentsTotal }}</td>
                </tr>
            </tbody>
        </table>
        
        <a href="{{ path('admin_commande_index') }}">back to list</a>
        
        <a href="{{ path('admin_commande_edit', {'id': commande.id}) }}">edit</a>
        
        {{ include('admin/commande/_delete_form.html.twig') }}
    </div>
</div>    

{% endblock %}
