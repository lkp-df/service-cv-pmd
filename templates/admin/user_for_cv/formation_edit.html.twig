{% extends "admin/base.html.twig" %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}
{% block title %}
	Edit Formation
{% endblock %}
{% block body %}
	<div class="card card-outline card-success">
		<div class="card-header">
			Diplome  Actuel:
			{{ formation.diplome }}
		</div>
		{{ form_start(form) }}
		<div class="card-body">
			<div class="form-group">
				{{ form_row(form.diplome) }}
			</div>
			<div class="form-group">
				{{ form_row(form.annee) }}
			</div>
			<div class="form-group">
				{{ form_row(form.ecoleObtention) }}
			</div>
			<div class="form-group">
				{{ form_row(form.Ville) }}
			</div>
			<div class="form-group">
				{{ form_row(form.pays) }}
			</div>
			<div class="btn-group" role="group">
				{% if is_granted('ROLE_ADMIN') %}
					{{ link.back(path('cv_edit',{'id':userForcv.id})) }}
					{{ btn.update() }}
				{% elseif is_granted('ROLE_USER') %}
					{{ link.back(path('cv_edit_client',{'id':userForcv.id})) }}
					{{ btn.update() }}
				{% endif %}
			</div>
		</div>
		{{ form_end(form) }}
		<div class="card-footer"></div>
	</div>
{% endblock %}
