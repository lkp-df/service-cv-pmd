{% extends "admin/base.html.twig" %}
{% import "macros/button.html.twig" as btn %}
{% import "macros/link.html.twig" as link %}
{% block title %}
	Edit Langue
{% endblock %}
{% block body %}
	<div class="card card-outline card-success">
		<div class="card-header">
			Langue Actuelle:
			{{ langue.designation }}
			&nbsp;Pourcentage: &nbsp;
			{{ langue.getNiveauPourcent }}
			%


		</div>
		{{ form_start(form) }}
		<div class="card-body">
			<div class="form-group">
				{{ form_row(form.designation) }}
			</div>
			<div class="form-group">
				{{ form_row(form.niveau_pourcent) }}
			</div>
			<div class="btn-group" role="group">
				{% if is_granted('ROLE_ADMIN') %}
					{{ link.back(path('cv_edit',{'id':userForcv.id})) }}
				{% elseif is_granted('ROLE_USER') %}
					{{ link.back(path('cv_edit_client',{'id':userForcv.id})) }}
				{% endif %}
				{{ btn.update() }}
			</div>
		</div>
		{{ form_end(form) }}
		<div class="card-footer"></div>
	</div>
{% endblock %}
