{% extends 'admin/base.html.twig' %}
{% import "macros/link.html.twig" as link %}
{% block title %}Utilisateur cv
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-12 col-12">
			<div class="card card-outline card-primary">
				<div class="card-header">
					<div class="card-title">Uilisateur</div>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-md-3 col-12">
							<div class="nav flex-column nav-tabs h-100" id="vert-tabs-tab" role="tablist" aria-orientation="vertical">
								<a class="nav-link active" id="vert-tabs-information-tab" data-toggle="pill" href="#vert-tabs-information" role="tab" aria-controls="vert-tabs-information" aria-selected="true">Informations</a>
								<a class="nav-link" id="vert-tabs-formations-tab" data-toggle="pill" href="#vert-tabs-formations" role="tab" aria-controls="vert-tabs-formations" aria-selected="false">Formations</a>
								<a class="nav-link" id="vert-tabs-competences-tab" data-toggle="pill" href="#vert-tabs-competences" role="tab" aria-controls="vert-tabs-competences" aria-selected="false">Compétences</a>
								<a class="nav-link" id="vert-tabs-experiences-tab" data-toggle="pill" href="#vert-tabs-experiences" role="tab" aria-controls="vert-tabs-experiences" aria-selected="false">Expériences</a>
								<a class="nav-link" id="vert-tabs-logiciels-tab" data-toggle="pill" href="#vert-tabs-logiciels" role="tab" aria-controls="vert-tabs-logiciels" aria-selected="false">Logiciels</a>
								<a class="nav-link" id="vert-tabs-langues-tab" data-toggle="pill" href="#vert-tabs-logiciels" role="tab" aria-controls="vert-tabs-logiciels" aria-selected="false">Logiciels</a>
								<a class="nav-link" id="vert-tabs-centre_interet-tab" data-toggle="pill" href="#vert-tabs-centre_interet" role="tab" aria-controls="vert-tabs-centre_interet" aria-selected="false">Centre interet</a>
								<a class="nav-link" id="vert-tabs-contacts-tab" data-toggle="pill" href="#vert-tabs-contacts" role="tab" aria-controls="vert-tabs-contacts" aria-selected="false">Contacts</a>
							</div>
						</div>
						<div class="col-7 col-sm-9">
							<div class="tab-content" id="vert-tabs-tabContent">
								<div class="tab-pane text-left fade active show" id="vert-tabs-information" role="tabpanel" aria-labelledby="vert-tabs-information-tab">
									<div class="row">
										<div class="col-md-4 col-12">
											<div class="card-body box-profile">
												<div class="text-center">
													<img class="profile-user-img img-fluid img-circle" src="/img/user/empty.png" alt="Malick Tounkara">
												</div>
												<h3 class="profile-username text-center">{{ user.nom ~" " ~ user.prenom}}
												</h3>
											</div>
										</div>
										<div class="col-md-8">
											<p>Poste recherche :
												{{ user.posteRechercheOccupe |capitalize }}
											</p>
											<p>Sexe :
												{{ user.sexe |capitalize }}
											</p>

										</div>
									</div>
								</div>
								<div class="tab-pane fade" id="vert-tabs-formations" role="tabpanel" aria-labelledby="vert-tabs-formations-tab">
									<div class="row">
										{% for item in user.formations %}
											<div class="col-md-12 col-12">
												<div class="card">
													<div class="card-body">
														<div class="row">
															<div class="col-md-12 col-12">
																<dl class="row">
																	<dt class="col-md-3 col-12">Diplome</dt>
																	<dd class="col-md-9 col-12">{{ item.diplome }}</dd>
																	<dt class="col-md-3 col-12">Année</dt>
																	<dd class="col-md-9 col-12">{{ item.annee }}</dd>

																	<dt class="col-md-3 col-12">Ville / Pays</dt>
																	<dd class="col-md-9 col-12">{{ item.ville ~ "/" ~ item.pays }}</dd>
																</dl>
															</div>
														</div>
													</div>
												</div>
											</div>
										{% endfor %}
									</div>
								</div>
								<div class="tab-pane fade" id="vert-tabs-contacts" role="tabpanel" aria-labelledby="vert-tabs-contacts-tab">
									<div class="row">
										{% for item in user.contacts %}
											<div class="col-md-12 col-12">
												<div class="card">
													<div class="card-body">
														<div class="row">
															<div class="col-12 col-md-4">
																Tel:{{ item.tel }}
															</div>
															<div class="col-12 col-md-4">
																Email:
																{{ item.email }}
															</div>
															<div class="col-12 col-md-4">
																Adresse:
																{{ item.adresse }}
															</div>
														</div>
													</div>
												</div>
											</div>
										{% endfor %}
									</div>
								</div>
								<div class="tab-pane fade" id="vert-tabs-logiciels" role="tabpanel" aria-labelledby="vert-tabs-logiciels-tab">
									<div class="row">
										{% for item in user.logiciels %}
											<div class="col-md-12 col-12">
												<div class="card">
													<div class="card-body">
														<div class="row">
															<div class="col-md-12 col-12">
																<dl class="row">
																	<dt class="col-md-3 col-12">Designation</dt>
																	<dd class="col-md-9 col-12">{{ item.designation }}  ({{ item.niveauPourcent }}%) </dd>
																	<dt class="col-md-3 col-12">Niveau</dt>
																	<dd class="col-md-9 col-12">
																		<div class="row">
																			<div class="col-md-10 col-10">
																				<div class="progress">
																					<div class="progress-bar bg-primary progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: {{ item.niveauPourcent}}%">
																						<span class="sr-only">{{ item.niveauPourcent }}% Complete
																						</span>
																					</div>
																				</div>
																			</div>
																			
																		</div>
																	</dd>

																</dl>
															</div>
														</div>
													</div>
												</div>
											</div>
										{% endfor %}
									</div>
								</div>
								<div class="tab-pane fade" id="vert-tabs-centre_interet" role="tabpanel" aria-labelledby="vert-tabs-centre_interet-tab">
									<div class="row">
										{% for item in user.centreInteret %}
											<div class="col-md-12 col-12">
												<div class="card">
													<div class="card-body">
														<div class="row">
															<div class="col-md-12 col-12">
																<dl class="row">
																	<dt class="col-md-3 col-12">Designation</dt>
																	<dd class="col-md-9 col-12">{{ item.designation }} </dd>
																</dl>
															</div>
														</div>
													</div>
												</div>
											</div>
										{% endfor %}
									</div>
								</div>
								<div class="tab-pane fade" id="vert-tabs-competences" role="tabpanel" aria-labelledby="vert-tabs-competences-tab">
									<div class="row">
										{% for item in user.competences %}
											<div class="col-md-12 col-12">
												<div class="card">
													<div class="card-body">
														<div class="row">
															<div class="col-md-12 col-12">
																<dl class="row">
																	<dt class="col-md-3 col-12">Designation</dt>
																	<dd class="col-md-9 col-12">{{ item.designation }}  ({{ item.niveauPourcent }}%) </dd>
																	<dt class="col-md-3 col-12">Niveau</dt>
																	<dd class="col-md-9 col-12">
																		<div class="row">
																			<div class="col-md-10 col-10">
																				<div class="progress">
																					<div class="progress-bar bg-primary progress-bar-striped" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: {{ item.niveauPourcent}}%">
																						<span class="sr-only">{{ item.niveauPourcent }}% Complete
																						</span>
																					</div>
																				</div>
																			</div>
																			
																		</div>
																	</dd>

																</dl>
															</div>
														</div>
													</div>
												</div>
											</div>
										{% endfor %}
									</div>
								</div>
								<div class="tab-pane fade" id="vert-tabs-experiences" role="tabpanel" aria-labelledby="vert-tabs-experiences-tab">
									<div class="row">
										{% for item in user.experiences %}
											<div class="col-md-12 col-12">
												<div class="card">
													<div class="card-body">
														<div class="row">
															<div class="col-md-12 col-12">
																<dl class="row">
																	<dt class="col-md-3 col-12">Nom de l'entreprise</dt>
																	<dd class="col-md-9 col-12">{{ item.nomEntreprise }}</dd>
																	<dt class="col-md-3 col-12">Post occupe</dt>
																	<dd class="col-md-9 col-12">{{ item.posteOccupe }}</dd>
																	<dt class="col-md-3 col-12">Annee d'ocuupation</dt>
																	<dd class="col-md-9 col-12">{{ item.anneeOccupation }}</dd>
																	<dt class="col-md-12 col-12">Tache effectuée</dt>
																	<dd class="col-md-12 col-12">
																		<ul>
																			{% for tache in item.taches %}
																				<li>
																					{{ tache.description }}
																				</li>
																			{% endfor %}
																		</ul>
																	</dd>
																</dl>
															</div>
														</div>
													</div>
												</div>
											</div>
										{% endfor %}
									</div>
								</div>
							</div>
						</div>
					</div>
					<hr>
					{{ link.back(path('cv_index'),'back to list') }}
					<a href="{{ path('cv_edit', {'id': user.id}) }}">edit</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
