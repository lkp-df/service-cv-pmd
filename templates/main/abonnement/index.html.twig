                                    <li>Lorem ipsum dolor, sit amet</li>
                                    <li>Lorem ipsum dolor, sit amet</li>
                                    <li>Lorem ipsum dolor, sit amet</li>
                                    <li>Lorem ipsum dolor, sit amet</li>
                                </ul>
                                <a href="{{ path('cart_abonnement_add',{id:item.id}) }}" class="btn btn-primary btn_buy_abonnement">Commander</a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

