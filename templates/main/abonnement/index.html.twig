{% block main %}
<!-- modele -->
<section data-aos="fade-up" id="abonnement" class="bg-white text-center">
    <p class="text-white font-weight-bold home-title">Listes des abonnemnts</p>
</section>
<nav class="breadcrumb breadcrumb-1 border-none  py-1 bg-2 m-0">
    <a class="breadcrumb-item" href="/">Accueil</a>
    <span class="breadcrumb-item text-white active">Listes des abonnements</span>
</nav>
<section class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-12">
                <div class="row">
                    {% for item in types_abonnements %}
                    <div class="col-md-4 my-2">
