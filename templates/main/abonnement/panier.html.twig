{% extends "main/base.html.twig" %}
{% import "macros/alertes.html.twig" as alert %}
{% block title %}Confirmation de choix d'abonnement{% endblock %}

{% block main %}
<nav class="breadcrumb breadcrumb-1 border-none  py-1 bg-2 m-0">
    <a class="breadcrumb-item" href="/">Accueil</a>
    <a class="breadcrumb-item" href="{{ path('abonnement_index') }}">Listes des abonnements</a>
    <span class="breadcrumb-item text-white active">Confirmation</span>
</nav>

<section class="my-5">
    <div class="container p-5 bg-white">
        <p class="text-center py-3 billing-alert">Confirmer votre commande</p>
        <div class="row">
            <div class="col-12 col-md-12">
                {% for item in app.flashes('success') %}
                {{ alert.alert(item,'success')}}
                {% endfor %}
                {% for item in app.flashes('error') %}
                {{ alert.alert(item,'danger')}}
                {% endfor %}
            </div>
        </div>
        <div class="order_details_table">
            <h2>{{'Votre panier'|trans}}</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">{{'Type'|trans}}</th>
                            <th scope="col">{{'Details'|trans}}</th>
                            <th scope="col">{{'Prix'|trans}}</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <p>{{ type_abonnement.designation }}</p>
                            </td>            
                            <td>Lorem ipsum dolor sit amet consectetur adipisicing elit. Ad, dolores?</td>                
                            <td>
                                <p>{{ type_abonnement.montant|number_format(0,'.',' ') }}
                                    {{ site.current_name }}</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>Sous Total</h4>
                            </td>
                        
                            <td>
                                <p>{{ type_abonnement.montant|number_format(0,'',' ') }}
                                    {{ site.current_name }}</p>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <h4>Total</h4>
                            </td>
                            <td>
                                <h4>{{ type_abonnement.montant|number_format(0,'', ' ') }}
                                    {{ site.current_name }}</h4>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <form id="form_abonnement_new" method="post" action="{{ path('abonnement_commande_new') }}" >
                <input type="hidden" name="_token" value="{{ csrf_token('new_commande_abonnement' ~ type_abonnement.id) }}">
            
                <button type="submit" style="width: 300px" id="{{ (is_granted('ROLE_USER')) ? 'btn_confirmer_ma_commande':'btn_is_login' }}" class="btn btn-primary">Confirmer ma Commande</button>
            </form>
        </div>
    </div>
</section>
{% endblock %}
{% block foot %}
    <script src="{{ asset('js/abonnement.js') }}"></script>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function(){

            //REDIRIGE VERS LA PAGE DE CONNECTION
            $(document).on('click','#btn_is_login',function(e){
                e.preventDefault()
                Swal.fire({
                        title: 'Etes vous sûr?',
                        text: "Vous devez vous connecter ou créer un compte pour éffectuer une commande !  ",
                        icon: 'info',                       
                        confirmButtonColor: '#3085d6',
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = "/login"
                        }
                    })
            })

            //CONFIRMER UNE COMMANDE
            $(document).on('click','#btn_confirmer_ma_commande',function(e){
                e.preventDefault()
                Swal.fire({
                        title: 'Etes vous sûr?',
                        text: "Vous êtes sur le point d'effectuer une commande !  ",
                        icon: 'question',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        cancelButtonText: 'Non',
                        confirmButtonText: 'Oui, je confirme!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $('#form_abonnement_new').submit()
                        }
                    })
            })
        })
    </script>
{% endblock %}